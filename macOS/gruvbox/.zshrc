# Set personal aliases, overriding those provided by oh-my-zsh libs,
# plugins, and themes. Aliases can be placed here, though oh-my-zsh
# users are encouraged to define aliases within the ZSH_CUSTOM folder.
# For a full list of active aliases, run `alias`.
#
# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"
#source /Users/tal/.zsh-syntax-highlighting/dracula/zsh-syntax-highlighting.sh
#source /Users/tal/.zsh-syntax-highlighting/zsh-syntax-highlighting.zsh


# Aliases
alias python="python3"
alias pip="pip3"
alias lso="command ls"
alias ls="colorls -a"
alias tar_unzip="tar -xf"
alias tar_zip="tar -cf"
alias cls="clear"
alias wget="wget -c"
alias ipi="ipconfig getifaddr en0"
alias ipe="curl ipinfo.io/ip; echo"
alias ssh_start="sudo service ssh start"
alias ssh_restart="sudo service ssh restart"
alias ssh_stop="sudo service ssh stop"
alias ssh_status="sudo service ssh status"
alias update="brew update; brew upgrade; brew cleanup; brew autoremove; brew doctor; fig update; fig doctor; rustup update; python3.11 -m pip install --upgrade pip; npm install npm@latest -g; gem update;"
alias make="gmake"
alias rm="rm -i"

# Environment variables
eval "$(/opt/homebrew/bin/brew shellenv)"
export PATH="$HOME/.gem/ruby/2.6.0/bin:$PATH"
export PATH="$HOME/.local/bin:$PATH"
export PATH="$HOME/.cargo/bin:$PATH"
export PATH="$HOME/go/bin:$PATH"
export PATH="/opt/homebrew/opt/python@3.11/libexec/bin:$PATH"
export PATH="/Users/tal/Library/Python/3.11/bin:$PATH"
export PATH="/opt/homebrew/opt/node@16/bin:$PATH"
export PATH="/opt/homebrew/opt/ruby/bin:$PATH"
export PATH="/opt/homebrew/opt/m4/bin:$PATH"
export PATH="/opt/homebrew/opt/texinfo/bin:$PATH"
export PATH="/opt/homebrew/opt/openssl@3/bin:$PATH"
export PATH="/opt/homebrew/opt/bison/bin:$PATH"
export PATH="$HOME/.local/go/bin:$PATH"
export PATH="/Library/Frameworks/Mono.framework/Versions/Current/Commands:$PATH"

export LDFLAGS="-L/opt/homebrew/opt/openssl@3/lib"
export CPPFLAGS="-I/opt/homebrew/opt/openssl@3/include"
export PKG_CONFIG_PATH="/opt/homebrew/opt/openssl@3/lib/pkgconfig"

export EDITOR="vim"

export CPATH="$HOME/.local/include:$CPATH"
export LD_LIBRARY_PATH="$HOME/.local/lib:$LD_LIBRARY_PATH"
export PKG_CONFIG_PATH="$HOME/.local/lib/pkgconfig:$PKG_CONFIG_PATH"
export LDFLAGS="-L/opt/homebrew/opt/bison/lib"

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# Fig post block. Keep at the bottom of this file.
[[ -f "$HOME/.fig/shell/zshrc.post.zsh" ]] && builtin source "$HOME/.fig/shell/zshrc.post.zsh"
